# : File-specific styles {{{

[filetype]

rules = [
	# Images
	{ mime = "image/*", fg = "#458588" },

	# Media
	{ mime = "{audio,video}/*", fg = "#d79921" },

	# Archives
	{ mime = "application/{zip,rar,7z*,tar,gzip,xz,zstd,bzip*,lzma,compress,archive,cpio,arj,xar,ms-cab*}", fg = "#8ec07c" },

	# Documents
	{ mime = "application/{pdf,doc,rtf}", fg = "#98971a" },

	# Fallback
	{ name = "*", fg = "#bdae93" },
	{ name = "*/", fg = "#458588" }
]

# : }}}

