# : Manager {{{

[manager]
cwd = { fg = "#83a598" }

# Hovered
hovered         = { reversed = true }
preview_hovered = { underline = true }

# Find
find_keyword  = { fg = "#d79921", bold = true, italic = true, underline = true }
find_position = { fg = "#8ec07c", bg = "reset", bold = true, italic = true }

# Marker
marker_copied   = { fg = "#98971a", bg = "#98971a" }
marker_cut      = { fg = "#fb4934", bg = "#fb4934" }
marker_marked   = { fg = "#83a598", bg = "#83a598" }
marker_selected = { fg = "#d79921", bg = "#d79921" }

# Tab
tab_active   = { reversed = true }
tab_inactive = {}
tab_width    = 1

# Count
count_copied   = { fg = "#ebdbb2", bg = "#98971a" }
count_cut      = { fg = "#ebdbb2", bg = "#fb4934" }
count_selected = { fg = "#ebdbb2", bg = "#d79921" }

# Border
border_symbol = "│"
border_style  = { fg = "#bdae93" }

# : }}}


# : Mode {{{

[mode]

normal_main = { fg = "#ebdbb2", bg = "#458588", bold = true }
normal_alt  = { fg = "#458588", bg = "#bdae93" }

# Select mode
select_main = { fg = "#ebdbb2", bg = "#8ec07c", bold = true }
select_alt  = { fg = "#8ec07c", bg = "#bdae93" }

# Unset mode
unset_main = { fg = "#ebdbb2", bg = "#fb4934", bold = true }
unset_alt  = { fg = "#fb4934", bg = "#bdae93" }

# : }}}


# : Status bar {{{

[status]
