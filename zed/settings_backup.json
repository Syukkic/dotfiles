{
  "features": {
    "inline_completion_provider": "none"
  },
  "base_keymap": "VSCode",
  "theme": "Gruvbox Dark",
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "buffer_font_family": "Iosevka",
  "buffer_font_fallbacks": [
    "Iosevka",
    "FiraCode Nerd Font Mono",
    "JetBrainsMonoNL Nerd Font Mono",
    "Noto Sans CJK HK",
    "Noto Sans CJK SC",
    "Noto Sans CJK JP",
    "Noto Color Emoji"
  ],
  "buffer_font_features": { "calt": false, "cv01": 7 },
  "vim_mode": true,
  "relative_line_numbers": true,
  "soft_wrap": "bounded",
  "preferred_line_length": 120,
  "tab_bar": {
    "show": true
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "centered_layout": {
    "left_padding": 0.15,
    "right_padding": 0.15
  },
  "inlay_hints": {
    "enabled": true
  },
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "classAttributes": ["class", "className", "ngClass", "styles"]
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "checkOnSave": {
          "command": "clippy"
        }
      }
    }
  },
  "languages": {
    "TypeScript": {
      "inlay_hints": {
        "enabled": true,
        "show_parameter_hints": false,
        "show_other_hints": true,
        "show_type_hints": true
      }
    },
    "Python": {
      "format_on_save": { "language_server": { "name": "ruff" } },
      "formatter": { "language_server": { "name": "ruff" } },
      "language_servers": ["pyright", "ruff"]
    },
    "Rust": {
      "formatter": "language_server",
      "format_on_save": "on"
    }
  },
  "terminal": {
    "env": {
      "EDITOR": "zed --wait"
    }
  },
  "file_types": {
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "JSON": ["json", "jsonc", "*.code-snippets"]
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/out",
    "**/dist",
    "**/.husky",
    "**/.turbo",
    "**/.vscode-test",
    "**/.vscode",
    "**/.next",
    "**/.storybook",
    "**/.tap",
    "**/.nyc_output",
    "**/report",
    "**/node_modules"
  ],
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "project_panel": {
    "button": true,
    "dock": "right",
    "git_status": true
  },
  "outline_panel": {
    "dock": "left"
  },
  "collaboration_panel": {
    "dock": "left",
    "button": false
  },
  "notification_panel": {
    "dock": "left"
  },
  "chat_panel": {
    "dock": "left",
    "button": false
  },
  "assistant": {
    "version": "2",
    "button": false,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-5-sonnet"
    }
  }
}
