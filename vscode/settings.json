    // "activityBar.activeBorder": "#f3f3f3",
    // "statusBar.background": "#007acc",
    // "statusBar.foreground": "#ffffff",
    // "statusBarItem.remoteBackground": "#16825d",
    // "statusBarItem.remoteForeground": "#ffffff",
    // "editor.background": "#f3f3f3",
    // "tab.activeBackground": "#fcfcfc"
    //     // "statusBar.background": "#c491a1",
    //     // "statusBarItem.remoteBackground": "#996c79",
    //     // "activityBarBadge.background": "#c28699",
    //     // "list.activeSelectionBackground": "#d6bfc7",
    //     // "list.activeSelectionForeground": "#0c0c0c",
  },
  "window.menuBarVisibility": "toggle",
  "editor.fontFamily": "'Noto Sans Mono','JetBrains Mono','Iosevka Nerd Font Mono', 'Fira Code','ComicShannsMono Nerd Font','Cascadia Code','Droid Sans Mono','monospace'",
  "editor.fontSize": 15,
  "editor.fontLigatures": false,
  // "http.proxy": "http://127.0.0.1:8080",
  "editor.lineNumbers": "relative",
  "editor.tabCompletion": "onlySnippets",
  "terminal.integrated.fontFamily": "'Noto Sans Mono','Iosevka Nerd Font Mono',MesloLGS NF",
  "terminal.integrated.fontSize": 15,
  "latex-workshop.latex.tools": [
    {
      "name": "xelatex",
      "command": "xelatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-xelatex",
        "-outdir=%OUTDIR%",
        "%DOC%"
      ],
      "env": {}
    },
    {
      "name": "bibtex",
      "command": "bibtex",
      "args": ["%DOCFILE%"],
      "env": {}
    }
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "xelatex",
      "tools": ["xelatex"]
    },
    {
      "name": "xelatex -> bibtex -> xelatex * 2",
      "tools": ["xelatex", "bibtex", "xelatex", "xelatex"]
    }
  ],
  "editor.wordWrap": "off",
  "editor.unicodeHighlight.allowedLocales": {
    "zh-hans": true,
    "zh-hant": true
  },
  "path-intellisense.showHiddenFiles": true,
  "path-intellisense.autoSlashAfterDirectory": true,
  "go.gopath": "/home/yuki/.go",
  "beancount.mainBeanFile": "~/personal/finance/main.bean",
  "beancount.fixedCJKWidth": true,
  "workbench.startupEditor": "none",
  "rust-analyzer.check.command": "clippy",
  "rust-analyzer.rustfmt.rangeFormatting.enable": true,
  "redhat.telemetry.enabled": false,
  "[lua]": {
    "editor.defaultFormatter": "yinfei.luahelper"
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.formatOnSave": true
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.codeActionsOnSave": {
      "source.organizeImports.ruff": "explicit"
    }
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "black-formatter.args": ["--skip-string-normalization"],
  "editor.minimap.enabled": true,
  "window.titleBarStyle": "native",
  "chat.commandCenter.enabled": false,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "update.mode": "none",
  "editor.formatOnSave": true,
  "window.customTitleBarVisibility": "auto",
  "workbench.navigationControl.enabled": false,
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,
  "workbench.colorTheme": "Default Light Modern",
  "emmet.includeLanguages": {
    "postcss": "css"
  },
  // inlay hints
  "editor.inlayHints.fontSize": 1,
  "editor.inlayHints.padding": true,
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.callArgumentNames": "partial",
  "javascript.inlayHints.functionLikeReturnTypes.enabled": true,
  "javascript.inlayHints.parameterNames.enabled": "literals",
  "typescript.inlayHints.enumMemberValues.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.parameterNames.enabled": "literals"
}
